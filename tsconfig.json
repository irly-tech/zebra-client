{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist"
    },
    "files": [],
    "references": [
        {
            "path": "packages/core"
        },
        {
            "path": "packages/otel"
        }
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}